<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.liam.itp.MapsActivity"
    tools:showIn="@layout/activity_maps"
    >

    <include layout="@layout/navbar_display"
        android:id="@+id/navBar"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/Wrapper">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/navBar">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/imageView"
                android:src="@mipmap/ic_launcher"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/homeBtn"
                android:src="@drawable/ic_home"
                android:background="#00000000"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:padding="10dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/locationBtn"
                android:src="@drawable/ic_location_on"
                android:background="#00000000"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:padding="10dp"
                />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/addVenueBtn"
                android:src="@drawable/ic_add"
                android:background="#00000000"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:padding="10dp"
                android:clickable="false" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/cocktailsBtn"
                android:src="@drawable/ic_local_bar"
                android:background="#00000000"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:padding="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/Search"
            android:layout_marginTop="20dp">


<!--
            <EditText
                android:layout_width="265dp"
                android:layout_height="wrap_content"
                android:id="@+id/TFaddress"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:hint="Enter full address"
                android:layout_marginTop="10dp"
                android:inputType="text"
                android:imeOptions="actionDone"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Search"
                android:id="@+id/SearchBTN"
                android:onClick="onSearch"
                android:background="#85C02F"
                android:textColor="#fdfdfd"
                android:layout_marginRight="10dp"
                android:textAlignment="center"
                android:layout_weight="5"
                android:layout_marginTop="5dp" /> -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Filter"
                android:id="@+id/filterTV"
                android:textSize="30sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="6dp" />

            <ImageView
                android:layout_width="23dp"
                android:layout_height="36dp"
                android:id="@+id/filterIV"
                android:layout_marginTop="10dp" />
            <!--android:src="@drawable/filter"-->


            <!-- USE IF STATEMENTS TO SHOW MARKERS OF ONLY WHAT IS SELECTED, EASIER TO FIGURE OUT THEN CUSTOMISED MAP SEARCH -->

            <Spinner
                android:layout_width="110dp"
                android:layout_height="fill_parent"
                android:id="@+id/type"
                android:spinnerMode="dropdown"
                android:entries="@array/markerType"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinner"
                android:spinnerMode="dropdown"
                android:entries="@array/markerPlaces"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:layout_gravity="right" />

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/typeHolder"
            android:weightSum="1"
            android:layout_marginTop="10dp">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Map Type"
                android:id="@+id/typeBTN"
                android:onClick="changeType"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="-10dp"
                android:background="#85C02F"
                android:textColor="#fdfcfc"
                android:textAlignment="center"
                android:layout_weight="1" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="+"
                android:id="@+id/zoomIn"
                android:textSize="30sp"
                android:onClick="onZoom"
                android:layout_marginLeft="145dp"
                android:textAlignment="center"
                android:background="#85C02F"
                android:textColor="#fdfcfc" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="-"
                android:id="@+id/zoomOut"
                android:textSize="30sp"
                android:onClick="onZoom"
                android:textAlignment="center"
                android:background="#85C02F"
                android:textColor="#fdfcfc"
                android:layout_marginRight="10dp" />


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mapHolder"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="60dp"
            android:background="#9d222121">


            <fragment

                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                tools:context="com.example.liam.itp.MapsActivity"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp"
                android:id="@+id/map"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp" />




        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
